{% extends 'base.html.twig' %}

{% block title %}Galaxy Swiss Bourdin | Saisir fiche de frais{% endblock %}

{% block body %}

<head>
    <meta charset='utf-8'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            {% include 'include/sidebar.html.twig' %}
            <div class="col-4">
                <br><br><br><h2>Saisir fiche de frais</h2>
                <br><br><br><h4>Éléments forfaitisés</h4>
                <br><h5>Période : {{ "now" | date("F Y") }}</h5>
                {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                <br><br><div class="formulaire">
                    {{ form_start(ElementsForfaitises) }}
                        <label for="number">Forfait étape</label> {{ form_widget(ElementsForfaitises.ForfaitEtape, {'attr': {'class': 'form-control'}})}}
                        <label for="number">Forfait kilométrique</label> {{ form_widget(ElementsForfaitises.FraisKilometrique, {'attr': {'class': 'form-control'}})}}
                        <label for="number">Forfait nuitée hôtel</label> {{ form_widget(ElementsForfaitises.NuiteeHotel, {'attr': {'class': 'form-control'}})}}
                        <label for="number">Forfait repas restaurant</label> {{ form_widget(ElementsForfaitises.RepasRestaurant, {'attr': {'class': 'form-control'}})}}
                        <br><button type="submit" class="btn btn-lg btn-success pull-right">Envoyer</button>
                    {{ form_end(ElementsForfaitises) }}
                </div>
                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}